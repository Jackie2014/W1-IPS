@using IPDetectServer.Web
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - IP监测后台管理系统</title>
    <script src="~/Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/modernizr-1.7.min.js" type="text/javascript"></script>
    <link href="~/Content/PortalStyle.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="outline-style">
        <div class="header">
            @Html.Partial("_Header")
        </div>
        <div class="main_body">
            @if (SessionManager.IsLogin)
            {
                <div class="resource_layout_left">
                    @Html.Partial("_LeftMenu")
                </div>
            }
            <div class="resource_layout_middle">
                <div class="line_vertical_separator">
                    &nbsp;
                </div>
            </div>
            @*  <div class="resource_layout_right">*@
            @RenderBody()
            @* </div>*@
        </div>
        <div class="clearall">
        </div>
        <div class="footer">@Html.Partial("_Footer")</div>
    </div>
</body>
</html>
